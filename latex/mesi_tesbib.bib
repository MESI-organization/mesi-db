  author = {Liberloo, Marion and Calfapietra, Carlo and Lukac, Martin and Godbold, Douglas and Luo, Zhi-Bin and Polle, Andrea and Hoosbeek, Marcel R. and Kull, Olevi and Marek, Michal and Raines, Christine and Rubino, Mauro and Taylor, Gail and {Scarascia-Mugnozza}, Giuseppe and Ceulemans, Reinhart},
