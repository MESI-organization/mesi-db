  author = {Karnosky, D. F. and Zak, D. R. and Pregitzer, K. S. and Awmack, C. S. and Bockheim, J. G. and Dickson, R. E. and Hendrey, G. R. and Host, G. E. and King, J. S. and Kopper, B. J. and Kruger, E. L. and Kubiske, M. E. and Lindroth, R. L. and Mattson, W. J. and Mcdonald, E. P. and Noormets, A. and Oksanen, E. and Parsons, W. F. J. and Percy, K. E. and Podila, G. K. and Riemenschneider, D. E. and Sharma, P. and Thakur, R. and S{\^o}ber, A. and S{\^o}ber, J. and Jones, W. S. and Anttonen, S. and Vapaavuori, E. and Mankovska, B. and Heilman, W. and Isebrands, J. G.},
