@article{shaw_et_al_2002,
  title = {Grassland {{Responses}} to {{Global Environmental Changes Suppressed}} by {{Elevated CO}} {\textsubscript{2}}},
  author = {Shaw, M. Rebecca and Zavaleta, Erika S. and Chiariello, Nona R. and Cleland, Elsa E. and Mooney, Harold A. and Field, Christopher B.},
